<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_date_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingTop="9dp"
        android:paddingRight="15dp"
        android:paddingBottom="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_calendar_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner11_grey"
            android:paddingLeft="20dp"
            android:paddingTop="3dp"
            android:paddingRight="20dp"
            android:paddingBottom="3dp"
            android:textColor="@color/blue_date_picker"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="今天：2019年5月13日，周一" />

        <ImageView
            android:id="@+id/iv_calendar_year_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/btn_calendar_year_previous"
            app:layout_constraintBottom_toBottomOf="@id/iv_calendar_year_next"
            app:layout_constraintEnd_toStartOf="@id/tv_calendar_year"
            app:layout_constraintTop_toTopOf="@id/iv_calendar_year_next" />

        <TextView
            android:id="@+id/tv_calendar_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/cal_text_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_calendar_year_next"
            app:layout_constraintEnd_toStartOf="@id/iv_calendar_year_next"
            app:layout_constraintTop_toTopOf="@id/iv_calendar_year_next"
            tools:text="2019" />

        <ImageView
            android:id="@+id/iv_calendar_year_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_calendar_year_next"
            app:layout_constraintBottom_toBottomOf="@id/tv_calendar_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_calendar_date" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_calendar_monthView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="iv_calendar_year_pre,tv_calendar_year,iv_calendar_year_next" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.necer.view.WeekBar
        android:id="@+id/cl_week_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:firstDayOfWeek="sunday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_date_tip" />

    <com.necer.calendar.Miui10Calendar
        android:id="@+id/miui10Calendar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:calendarHeight="250dp"
        app:defaultCalendar="week"
        app:hollowCircleColor="@color/cal_today_bg"
        app:isAllMonthSixLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_week_bar"
        app:lunarDistance="12dp"
        app:lunarTextSize="8sp"
        app:pointColor="@color/cal_selected_bg"
        app:pointDistance="16dp"
        app:pointLocation="down"
        app:pointSize="2dp"
        app:selectCircleColor="@color/cal_selected_bg"
        app:selectCircleRadius="3dp"
        app:selectLunarTextColor="@color/cal_selected_text"
        app:selectSolarTextColorColor="@color/cal_selected_text"
        app:solarTextColor="@color/cal_solar_text"
        app:solarTextSize="16sp"
        app:todaySolarTextColor="@color/cal_today_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="changeMode"
                android:tag="@string/factual_scroll_view"
                android:text="drag me!!!" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="@string/factual_scroll_view" />
        </LinearLayout>


    </com.necer.calendar.Miui10Calendar>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_week_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeTextType="uniform"
        android:background="#cfff"
        android:gravity="center"
        android:maxLines="1"
        android:minHeight="50dp"
        android:textColor="@color/blue_date_picker"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/miui10Calendar"
        app:layout_constraintStart_toStartOf="@id/miui10Calendar"
        app:layout_constraintTop_toBottomOf="@id/cl_date_tip"
        tools:text="2018/02/12 - 2019/01/01=-=-=-=---12345678910abcdefgHiJKLMN"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/tv_month_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner20_yellow"
        android:elevation="10dp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/miui10Calendar"
        app:layout_constraintStart_toStartOf="@id/miui10Calendar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2018/02"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>