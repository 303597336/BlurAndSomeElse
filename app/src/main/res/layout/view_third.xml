<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/thirdView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="50dp"
    android:onClick="onClick">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/countryTipTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家乡："
                android:textSize="16sp" />

            <TextView
                android:id="@+id/countryTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/countryTipTV"
                android:maxLines="1"
                android:text="广东省 深圳市 南山区"
                android:textColor="#aaa"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/workTipTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/countryTipTV"
                android:layout_marginTop="5dp"
                android:text="职业："
                android:textSize="16sp" />

            <TextView
                android:id="@+id/workTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/workTipTV"
                android:layout_toRightOf="@id/workTipTV"
                android:maxLines="1"
                android:text="ui设计师"
                android:textColor="#aaa"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/constellationTipTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星座："
                android:textSize="16sp" />

            <TextView
                android:id="@+id/constellationTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/constellationTipTV"
                android:text="双子座"
                android:textColor="#aaa"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/emotionTipTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/constellationTipTV"
                android:layout_marginTop="5dp"
                android:text="情感："
                android:textSize="16sp" />

            <TextView
                android:id="@+id/emotionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/emotionTipTV"
                android:layout_toRightOf="@+id/emotionTipTV"
                android:text="单身"
                android:textColor="#aaa"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="他的足迹"
        android:textColor="#aaa"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/footMarkRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>
